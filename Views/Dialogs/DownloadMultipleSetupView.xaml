<UserControl
    x:Class="YTExplorer.Views.Dialogs.DownloadMultipleSetupView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:YTExplorer.Behaviors"
    xmlns:converters="clr-namespace:YTExplorer.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:YTExplorer.ViewModels.Dialogs"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://github.com/canton7/Stylet"
    MinWidth="500"
    d:DataContext="{d:DesignInstance Type=dialogs:DownloadMultipleSetupViewModel}"
    Loaded="{s:Action OnViewLoaded}"
    Style="{DynamicResource MaterialDesignRoot}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <TextBlock
            Grid.Row="0"
            Margin="8,16"
            FontSize="19"
            Text="{Binding Title}"
            TextTrimming="CharacterEllipsis"
            ToolTip="{Binding Title}">
            <TextBlock.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{s:Action CopyTitle}" Header="Copy" />
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>

        <!--  Videos  -->
        <Border
            Grid.Row="1"
            BorderBrush="{DynamicResource MaterialDesignDivider}"
            BorderThickness="0,1">
            <ListView
                Padding="8"
                HorizontalContentAlignment="Stretch"
                ItemsSource="{Binding AvailableVideos}"
                ScrollViewer.CanContentScroll="False"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                SelectionMode="Extended">
                <i:Interaction.Behaviors>
                    <behaviors:VideoMultiSelectionListBoxBehavior SelectedItems="{Binding SelectedVideos}" />
                </i:Interaction.Behaviors>
                <ListView.ItemContainerStyle>
                    <Style BasedOn="{StaticResource {x:Type ListViewItem}}" TargetType="{x:Type ListViewItem}">
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                        <Setter Property="Padding" Value="8,4,8,4" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Thumbnail  -->
                            <Image
                                Grid.Column="0"
                                Width="48"
                                Height="48"
                                Source="{Binding Converter={x:Static converters:VideoToLowestQualityThumbnailUrlConverter.Instance}}" />

                            <!--  Info  -->
                            <StackPanel
                                Grid.Column="1"
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <!--  Title  -->
                                <TextBlock
                                    FontSize="15"
                                    Text="{Binding Title}"
                                    TextTrimming="CharacterEllipsis"
                                    ToolTip="{Binding Title}" />

                                <!--  Misc  -->
                                <TextBlock
                                    Margin="0,4,0,0"
                                    FontWeight="Light"
                                    TextTrimming="CharacterEllipsis">
                                    <Run Text="{Binding Duration, Mode=OneWay}" />
                                    <Run Text="/" />
                                    <Run Text="{Binding Author, Mode=OneWay}" />
                                    <Run Text="/" />
                                    <Run Text="{Binding Video.Engagement.ViewCount, StringFormat=\{0:N0\}, Mode=OneWay}" />
                                    <Run Text="visualizaciones" />
                                </TextBlock>
                            </StackPanel>

                            <!--  Checkbox  -->
                            <materialDesign:PackIcon
                                Grid.Column="2"
                                Width="24"
                                Height="24"
                                Margin="8,0,0,0"
                                VerticalAlignment="Center"
                                Kind="Check"
                                Visibility="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}, Converter={x:Static s:BoolToVisibilityConverter.Instance}, Mode=OneWay}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <Grid Grid.Row="2" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Format  -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock
                    Margin="8"
                    VerticalAlignment="Center"
                    Text="Formato:" />
                <ComboBox
                    Width="150"
                    Margin="8"
                    VerticalAlignment="Center"
                    IsReadOnly="True"
                    Style="{StaticResource MaterialDesignFilledComboBox}"
                    ItemsSource="{Binding AvailableFormats}"
                    SelectedItem="{Binding SelectedFormat}" />
            </StackPanel>

            <!--  Video quality preference  -->
            <StackPanel
                Grid.Column="2"
                IsEnabled="{Binding IsAudioOnlyFormatSelected, Converter={x:Static converters:InverseBoolConverter.Instance}}"
                Orientation="Horizontal">
                <TextBlock
                    Margin="8"
                    VerticalAlignment="Center"
                    Text="Calidad:" />
                <ComboBox
                    Width="150"
                    Margin="8"
                    VerticalAlignment="Center"
                    IsReadOnly="True"
                    Style="{StaticResource MaterialDesignFilledComboBox}"
                    ItemsSource="{Binding AvailableQualityPreferences}"
                    SelectedItem="{Binding SelectedVideoQualityPreference}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={x:Static converters:VideoQualityPreferenceToStringConverter.Instance}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </Grid>

        <StackPanel
            Grid.Row="3"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <!--  OK  -->
            <Button
                Margin="8"
                Command="{s:Action Confirm}"
                IsDefault="True"
                Style="{DynamicResource MaterialDesignFlatButton}">
                <Button.Content>
                    <TextBlock>
                        <Run Text="DESCARGAR" />
                        <Run Text="(" /><Run Text="{Binding SelectedVideos.Count, FallbackValue=0, Mode=OneWay}" /><Run Text=")" />
                    </TextBlock>
                </Button.Content>
            </Button>

            <!--  Cancel  -->
            <Button
                Margin="8"
                Command="{s:Action Close}"
                Content="CANCELAR"
                IsCancel="True"
                Style="{DynamicResource MaterialDesignFlatButton}" />
        </StackPanel>
    </Grid>
</UserControl>
